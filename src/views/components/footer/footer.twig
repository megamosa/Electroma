{# Footer Start #}
<div class="container-fluid footer py-5 {{ theme.settings.get('footer_is_dark') ? 'bg-dark' : 'bg-light' }}">
    <div class="container py-5">
        {# Contact Info Cards #}
        <div class="row g-4 rounded mb-5" style="background: rgba(255, 255, 255, .03);">
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="rounded p-4">
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4" style="width: 70px; height: 70px;">
                        <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h4 class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">{{ trans('common.address') }}</h4>
                        <p class="mb-2">{{ store.settings.address | default(trans('common.store_address')) }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="rounded p-4">
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4" style="width: 70px; height: 70px;">
                        <i class="fas fa-envelope fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h4 class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">{{ trans('common.mail_us') }}</h4>
                        <p class="mb-2">{{ store.contacts.email }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="rounded p-4">
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4" style="width: 70px; height: 70px;">
                        <i class="fa fa-phone-alt fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h4 class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">{{ trans('common.telephone') }}</h4>
                        <p class="mb-2">{{ store.contacts.mobile }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="rounded p-4">
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mb-4" style="width: 70px; height: 70px;">
                        <i class="fab fa-firefox-browser fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h4 class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">{{ trans('common.website') }}</h4>
                        <p class="mb-2">{{ store.url }}</p>
                    </div>
                </div>
            </div>
        </div>
        
        {# Footer Links #}
        <div class="row g-5">
            {# Newsletter #}
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-primary mb-4">{{ trans('common.newsletter') }}</h4>
                    <p class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }} mb-3">{{ trans('common.newsletter_desc') }}</p>
                    <salla-newsletter></salla-newsletter>
                </div>
            </div>
            
            {# Customer Service #}
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-primary mb-4">{{ trans('common.customer_service') }}</h4>
                    <a href="{{ link('contact') }}" class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}"><i class="fas fa-angle-right me-2"></i> {{ trans('common.contact_us') }}</a>
                    <a href="{{ link('customer/orders') }}" class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}"><i class="fas fa-angle-right me-2"></i> {{ trans('common.order_history') }}</a>
                    <a href="{{ link('customer/profile') }}" class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}"><i class="fas fa-angle-right me-2"></i> {{ trans('common.my_account') }}</a>
                </div>
            </div>
            
            {# Information #}
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-primary mb-4">{{ trans('common.information') }}</h4>
                    {% for page in pages %}
                    <a href="{{ page.url }}" class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}"><i class="fas fa-angle-right me-2"></i> {{ page.title }}</a>
                    {% endfor %}
                </div>
            </div>
            
            {# Social Links #}
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-primary mb-4">{{ trans('common.follow_us') }}</h4>
                    <div class="d-flex gap-2">
                        {% if store.social.facebook %}
                        <a href="{{ store.social.facebook }}" class="btn btn-outline-primary btn-lg-square rounded-circle" target="_blank"><i class="fab fa-facebook-f"></i></a>
                        {% endif %}
                        {% if store.social.twitter %}
                        <a href="{{ store.social.twitter }}" class="btn btn-outline-primary btn-lg-square rounded-circle" target="_blank"><i class="fab fa-twitter"></i></a>
                        {% endif %}
                        {% if store.social.instagram %}
                        <a href="{{ store.social.instagram }}" class="btn btn-outline-primary btn-lg-square rounded-circle" target="_blank"><i class="fab fa-instagram"></i></a>
                        {% endif %}
                        {% if store.social.youtube %}
                        <a href="{{ store.social.youtube }}" class="btn btn-outline-primary btn-lg-square rounded-circle" target="_blank"><i class="fab fa-youtube"></i></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# Footer End #}

{# Copyright Start #}
<div class="container-fluid copyright py-4 {{ theme.settings.get('footer_is_dark') ? 'bg-dark' : 'bg-light' }}">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-md-6 text-center text-md-start mb-md-0">
                <span class="{{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">
                    <a href="{{ link('/') }}" class="border-bottom {{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">
                        <i class="fas fa-copyright me-2"></i>{{ store.name }}
                    </a>, {{ trans('common.all_rights_reserved') }}.
                </span>
            </div>
            <div class="col-md-6 text-center text-md-end {{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}">
                {{ trans('common.powered_by') }} 
                <a class="border-bottom {{ theme.settings.get('footer_is_dark') ? 'text-white' : '' }}" href="https://salla.com" target="_blank">Salla</a>
            </div>
        </div>
    </div>
</div>
{# Copyright End #}

