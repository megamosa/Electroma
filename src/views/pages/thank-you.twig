{% extends 'layouts.master' %}

{% block content %}

{# Thank You Section #}
<div class="container-fluid py-5">
    <div class="container py-5 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                <h1 class="display-4 mb-3">{{ trans('common.thank_you') }}</h1>
                <p class="text-muted mb-4">{{ trans('common.order_success_message') }}</p>
                
                {% if order %}
                <div class="bg-light rounded p-4 mb-4">
                    <h5>{{ trans('common.order_number') }}: #{{ order.reference_id }}</h5>
                    <p class="mb-0">{{ trans('common.order_total') }}: {{ order.total | money }}</p>
                </div>
                {% endif %}
                
                <a href="{{ link('/') }}" class="btn btn-primary rounded-pill px-5 py-3">
                    {{ trans('common.continue_shopping') }}
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}

